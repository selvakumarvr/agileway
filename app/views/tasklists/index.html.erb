

<div class="span-24">

<br><br>
<h1>My Lists</h1>
<div class="span-16">


 
<% @todo_tasks.each do |task| %>

  

<h3>
  <%= task.title %>
 </h3>
 <%= check_box_tag 'next_action', task.id, task.next_action, :class => 'next_action' %> 
    

<hr class ="space">
<% end %>
</div>







<div class="span-8 last">
  <h3>My Task Lists</h3>
  <hr>
<% @tasklists.each do |tasklist| %>

  
<div class="span-3">
<%= link_to tasklist.title, tasklist %>
    
</div>	
<div class ="span-2">
<%= link_to image_tag("/assets/edit_active.png", :border=>0), edit_tasklist_path(tasklist) %>
</div>

<div class = "span-2">
	<%= link_to image_tag("/assets/delete_active.png", :border=>0), tasklist, confirm: 'Are you sure?', method: :delete %>
</div>
<hr class ="space">
<% end %>
</div>

<br />
<br />
<hr/>
<%= link_to 'New Task List', new_tasklist_path %>



