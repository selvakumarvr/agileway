<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Notes</th>
    <th>Effective at</th>
    <th>Duedate at</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  
<% @tasks.each do |task| %>
  <tr>
  
  
    
    <td><%= task.title %></td>
    <td><%= task.notes %></td>
    <td><%= task.effective_at %></td>
    <td><%= task.duedate_at %></td>
    <td><%= task.status %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

